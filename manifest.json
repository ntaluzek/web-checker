{
    "manifest_version": 3,
    "name": "Web Checker",
    "version": "0.1",
    "description": "Cycle through a list of websites that you like to check regularly.",
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "activeTab",
        "webNavigation"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
      },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "host_permissions": [
      "*://*/"
    ]
}
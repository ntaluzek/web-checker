{
    "manifest_version": 3,
    "name": "Web Checker",
    "version": "0.1.0",
    "description": "Check your favorite places on the web quickly and easily by cycling through lists of websites.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "webNavigation",
        "bookmarks"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
      },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "host_permissions": [
      "*://*/"
    ]
}